extends ../node_modules/jade-bootstrap/_bootstrap
extends layout.jade
append styles
	link(rel='stylesheet', href='/stylesheets/style.css')
block body
	+navbar-fixed("Marketplace", "dropdown_menu")
		+nav_item("/") Home
		+nav_item("/browse","active") Buy
		+nav_item("/upload") Sell
		form.navbar-form.navbar-left
			form.form-group(action="/search",method="get")
				+input-simple("text","mysearch", "Search","")
				button.btn("submit") Search
		form.navbar-form.navbar-right
			div(id="divId")
				+a-btn-success("/login") Login
			div(id="divIdlogout" style="display:none;")
				+a-btn-success(onclick="toggleLogin('','')" href="/login") Logout
		ul.nav.navbar-nav.navbar-right
			+nav_item("/account") Account
			+nav_item("/watchlist") Watchlist
	block content
		.inside
			h1 Browsing page
			ul
				each item in stock
					li
						p #{item.name}
						p #{item.description}
