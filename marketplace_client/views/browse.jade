extends ../node_modules/jade-bootstrap/_bootstrap
extends layout.jade
append styles
	link(rel='stylesheet', href='/stylesheets/style.css')
block body
	+navbar-fixed("Marketplace", "dropdown_menu")
		+nav_item("/") Home
		+nav_item("/browse","active") Buy
		+nav_item("/upload") Sell
		form.navbar-form.navbar-left
			form.form-group(action="/",method="get")
				input.input-block-level(type="text", name="mysearch", placeholder="Search")
				button.btn.btn-small(type="submit") Submit
		form.navbar-form.navbar-right
			+a-btn-success("/login") Login
		ul.nav.navbar-nav.navbar-right
			+nav_item("/account") Account
			+nav_item("/watchlist") Watchlist
	block content
		.inside
			h1 Browsing page
			ul
				each item in stock
					li
						p #{item.name}
						p #{item.description}
