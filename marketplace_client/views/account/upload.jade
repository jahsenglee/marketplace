extends ../../node_modules/jade-bootstrap/_bootstrap
extends ../layout.jade
append styles
	link(rel='stylesheet', href='/stylesheets/style.css')


block content
	.inside
		h1 Upload an item
			form(id='uploadItem', name='Item', action='/uploadItem', method='GET')
				div
					input(type="text", name="name", placeholder="Name", class="form-control", value=name, style="width:15%; display:inline;")
				div
					input(type="text", name="price", placeholder="Price", class="form-control", value=name, style="width:15%; display:inline;")
				div
					input(type="text", name="description", placeholder="Description", class="form-control", value=name, style="width:15%; display:inline;")
				div
					input(type="text", name="image", placeholder="Image", class="form-control", value=name, style="width:15%; display:inline;")
				div
					input(type="text", name="details", placeholder="Details", class="form-control", value=name, style="width:15%; display:inline;")
				div
					button(class="btn", type"submit", value="Item") Upload

