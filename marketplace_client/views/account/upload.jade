extends ../../node_modules/jade-bootstrap/_bootstrap
extends ../layout.jade
append styles
	link(rel='stylesheet', href='/stylesheets/style.css')

block body
	+navbar-fixed("Marketplace", "dropdown_menu")
		+nav_item("/") Home
		+nav_item("/browse") Buy
		+nav_item("/upload","active") Sell
		form.navbar-form.navbar-left
			form.form-group(action="/",method="get")
				input.input-block-level(type="text", name="mysearch", placeholder="Search")
				button.btn.btn-small(type="submit") Submit
		form.navbar-form.navbar-right
			+a-btn-success("/login") Login
		ul.nav.navbar-nav.navbar-right
			+nav_item("/account") Account
			+nav_item("/watchlist") Watchlist
	block content
		.inside
			h1 Upload an item
				div
					input(type="text", id="Name", placeholder="Name", class="form-control" style="width:15%; display:inline;")
					br
					input(type="text", id="Price", placeholder="Price", class="form-control" style="width:15%; display:inline;")
					br
					input(type="text", id="Description", placeholder="Description", class="form-control" style="width:15%; display:inline;")
					br
					input(type="text", id="Image", placeholder="Image", class="form-control" style="width:15%; display:inline;")
					br
					input(type="text", id="details", placeholder="Details", class="form-control" style="width:15%; display:inline;")
					br
					button.btn("submit") Upload