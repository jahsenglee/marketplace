extends ../../node_modules/jade-bootstrap/_bootstrap
extends ../layout.jade
append styles
	link(rel='stylesheet', href='/stylesheets/style.css')

	
block body
	script.		
		function loggedIn(user, pass){
			var log = false;
			if(log === false){
				console.log('loggedIn');
				log = true;		
				document.getElementById('divId').style.display = 'none';				
				document.getElementById('divIdlogout').style.display = '';
			}else{
				console.log('Incorrect');
				log = false;
				document.getElementById('divId').style.display = '';
				document.getElementById('divIdlogout').style.display = 'none';
			}
			console.log(log)
		}
		
	
	+navbar-fixed("Marketplace", "dropdown_menu")
		+nav_item("/", "active") Home
		+nav_item("/browse") Buy
		+nav_item("/upload") Sell
		form.navbar-form.navbar-left
			form.form-group(action="/",method="get")
				input.input-block-level(type="text", name="mysearch", placeholder="Search")
				button.btn.btn-small(type="submit") Submit
		form.navbar-form.navbar-right
			div(id="divId")
				+a-btn-success("/login") Login
			div(id="divIdlogout" style="display:none;")
				+a-btn-success(onclick="loggedIn('','')" href="/login") Logout
		ul.nav.navbar-nav.navbar-right
			+nav_item("/account") Account
			+nav_item("/watchlist") Watchlist
	block content
		.inside		
			h1 Login 
				div
					input(type="text", id="Username", placeholder="Username", class="form-control" style="width:15%; display:inline;")
				div
					input(type="text", id="Password", placeholder="Password", class="form-control" style="width:15%; display:inline;")		
			button(class="btn" onclick="loggedIn('User','Pass')") Login