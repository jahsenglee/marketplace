extends ../node_modules/jade-bootstrap/_bootstrap
extends layout.jade
append styles
    link(rel='stylesheet', href='/stylesheets/style.css')

block body
    #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
            li
                a(href='/') Home
            li
                a(href='/browse') Browse
            li
                a(href='/upload') Sell
            li
                .searchbox
                    form.form-group(action="/search",method="get")
                        input.input-block-level(type="text", name="mysearch", placeholder="Search")
                        button.btn.btn-small(type="submit") Submit
        ul.nav.navbar-nav.navbar-right
            li
                a(href='/account') Account
            li
                a(href='/watchlist') Watchlist
            li
                .logoutstyle
                    div(id="divId")
                        +a-btn-success("/login") Login
                    div(id="divIdlogout", style="display:none;")
                        button(class="btn" onclick="toggleLogin('','')") Logout
    block content
        .headerpad
            .container
                h1 Buy
                    .container
                        .jumbotron
                            .row
                                .col-md-4.col-sm-4.col-xs-12.watchImagePad
                                    img.imageProfile.imageRounded(src='images/#{item.images[0]}', alt='ITEM DP', width='250', height='200')
                                .col-md-6.col-sm-6.col-xs-12
                                    p #{item.name}
                                    p ACCOUNT NAME: Joan Smourgh
                                    p ACCOUNT Number : 4576 9876 1234 9865
                                    p $#{item.price} will be deducted from this account

                                .col-md-2.col-sm-2.col-xs-12
                                    .singleitemprice
                                        p $#{item.price}
                            .row
                                .col-md-2.col-sm-2.col-xs-12.padTop
                                    //a.btn-lg.btn-success Purchase
                                    form.form-signin(role="button",action="/confirmedBuy", method="get")
                                        //+a-btn-primary(type ="submit") View
                                        button.btn.btn-large.btn-success(type="submit", name="id" value="#{item.id}") Confirm
                                .col-md-1.col-sm-1.col-xs-12.padTop
                                    //a.btn-lg.btn-success("#/singleItem") View Item
                                    form.form-signin(role="button",action="/singleItem", method="get")
                                        //+a-btn-primary(type ="submit") View
                                        button.btn.btn-large.btn-primary(type="submit", name="id" value="#{item.id}") View
            .footer
